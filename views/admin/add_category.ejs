<form method="post" action="/admin/categories/add-category" enctype="multipart/form-data">
   <div class="form-group">
        <label for="">Titulo</label>
        <input type="text" class="form-control" name="title" value="<%= title %>" placeholder="Title">      
   </div> 
   <br>
   
